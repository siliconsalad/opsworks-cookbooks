server {
  listen   80;
  server_name  127.0.0.1;

  if ($http_host !~* "www.deconov.com") {
    rewrite ^(.*)$ http://www.deconov.com$1 permanent;
  }

  access_log  <%= node[:nginx][:log_dir] %>/localhost.access.log;

  location / {
    root   /var/www/nginx-default;
    index  index.html index.htm;
  }
}
